{
  "title": "sixtyPercentYoda",
  "rules": [
    {
      "description": "~/ (right_shift + escape)",
      "manipulators": [{
        "from": {
          "key_code": "escape",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
          "key_code": "backslash",
          "modifiers": [
            "left_shift"
          ]
        }, {
          "key_code": "slash"
        }],
        "type": "basic"
      }]
    },
    {
      "description": "~ (left_option + escape)",
      "manipulators": [{
        "from": {
          "key_code": "escape",
          "modifiers": {
            "mandatory": [
              "left_option"
            ]
          }
        },
        "to": [{
          "key_code": "backslash",
          "modifiers": [
            "left_shift"
          ]
        }],
        "type": "basic"
      }]
    }
  ]
}
